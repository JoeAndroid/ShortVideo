<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/filter_root"
    android:layout_width="74.0dip"
    android:layout_height="90dp"
    android:layout_gravity="center_vertical"
    android:orientation="vertical"
    android:padding="5dip">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="64.0dip">

        <com.joe.shortvideo.widget.CircularImageView
            android:id="@+id/filter_thumb_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/shape_effect_selector"
            android:scaleType="centerInside"
            android:padding="1dp"
            android:src="@mipmap/original" />
    </FrameLayout>

    <TextView
        android:id="@+id/filter_thumb_name"
        android:layout_width="fill_parent"
        android:layout_height="20.0dip"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:text="Original"
        android:textColor="@android:color/black"
        android:textSize="10.0sp" />
</FrameLayout>