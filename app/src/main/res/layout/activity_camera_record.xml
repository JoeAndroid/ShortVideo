<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <SurfaceView
        android:id="@+id/mSurfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/mTvRec"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/tv_start_bg"
        android:clickable="true"
        android:gravity="center"
        android:onClick="onClick"
        android:text="@string/start"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/mTvShow"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@id/mTvRec"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/tv_start_bg"
        android:clickable="true"
        android:gravity="center"
        android:onClick="onClick"
        android:text="预览"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/mTvRec"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp"
        android:padding="10dp"
        android:onClick="onClick"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/white"
        android:text="添加滤镜" />
    <com.joe.shortvideo.widget.WheelView.WheelView
        android:id="@+id/change_fliter"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/filterchoose_backgroud"
        app:dividerColor="#00ffffff"
        app:wheelDividerSize="0dp"
        app:wheelItemCount="2"
        app:wheelItemSize="45dp"
        app:wheelOrientation="horizontal"
        app:wheelTextColor="#ffffff"
        app:wheelTextColorCenter="#8EE5EE"
        app:wheelTextSize="14sp"/>
</RelativeLayout>